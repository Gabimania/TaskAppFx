<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskapp.ControllerViews.AdminController">
   <children>
      <TabPane layoutX="14.0" layoutY="36.0" prefHeight="351.0" prefWidth="539.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Task view">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="User">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tbUsers" layoutX="14.0" layoutY="19.0" prefHeight="289.0" prefWidth="226.0">
                          <columns>
                            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="usernameColumn" prefWidth="75.0" text="Username" />
                              <TableColumn fx:id="rolColumn" prefWidth="75.0" text="Rol" />
                          </columns>
                        </TableView>
                        <TextField fx:id="txtUsername" layoutX="277.0" layoutY="49.0" promptText="Username" />
                        <PasswordField fx:id="txtPassword" layoutX="277.0" layoutY="100.0" promptText="Password" />
                        <Button fx:id="create" layoutX="364.0" layoutY="256.0" mnemonicParsing="false" onAction="#createUser" text="Add user" />
                        <PasswordField fx:id="txtRePassword" layoutX="277.0" layoutY="161.0" promptText="Repeat Password" />
                        <ComboBox fx:id="comboRol" layoutX="277.0" layoutY="211.0" prefWidth="150.0" promptText="Rol" />
                        <Label fx:id="idlabel" layoutX="248.0" layoutY="291.0" prefHeight="17.0" prefWidth="283.0" textFill="#f80a0a" />
                        <Button fx:id="update" layoutX="251.0" layoutY="256.0" mnemonicParsing="false" onAction="#btnUpdateUser" text="Update" visible="false" />
                        <Button fx:id="delete" layoutX="370.0" layoutY="287.0" mnemonicParsing="false" onAction="#btnDelete" text="Delete" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
